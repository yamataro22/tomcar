<% if object.errors.any? %>
    <div id = "error_explanation">
        <div class = "alert alert-danger">
            Arkusz zawiera <%= pluralize(object.errors.count, "błąd") %>:
        </div>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <% if msg == "Name is too long (maximum is 20 characters)" %>
                    <% msg = "Za długa nazwa (max 20 znaków)" %>
                <% elsif msg == "Name can't be blank" %>
                    <% msg = "Nazwa nie może być pusta" %>
                <% end %>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>
